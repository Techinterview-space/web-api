@model Web.Api.Views.ChartSharePageViewModel

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="@Model.MetaDescription" />
    <meta name="keywords" content="зарплата, казахстан, it, salary" />
    <meta name="copyright" content="Maxim Gorbatyuk" />

    <meta property="og:title" content="Зарплаты в IT в Казахстане" />
    <meta property="og:description" content="@Model.MetaDescription" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@Model.FrontendUrlToRedirect" />
    <meta property="og:image" content="https://techinterview.space/assets/img/ti_logo_mini.png" />
    <meta property="og:site_name" content="techinterview.space" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:image" content="https://techinterview.space/assets/img/ti_logo_mini.png" />
    <meta name="twitter:title" content="Зарплаты в IT в Казахстане" />
    <meta name="twitter:description" content="@Model.MetaDescription" />
    <meta name="twitter:site" content="@@techinterview" />
    <meta name="twitter:creator" content="@@maximgorbatyuk" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">

    <title>Зарплаты в IT в Казахстане</title>
</head>
<body>

<div class="container">
    <div class="mt-5 mb-5 display-3">Зарплаты в IT в Казахстане</div>
    <div class="mb-3 fs-3 fw-light">
        @if (Model.HasAnyFilter)
        {
            <span>Специалисты </span>
            if (Model.HasProfessionsToInclude)
            {
                <span class="fw-bold">@Model.ProfessionsToInclude</span>
            }

            if (Model.Grade.HasValue)
            {
                <span>уровня <span class="fw-bold">{Model.Grade.ToString()}</span></span>
            }

            <span> зарабатывают в среднем:</span>
        }
        else
        {
            <span>Специалисты IT в Казахстане зарабатывают в среднем:</span>
        }
    </div>
    <div class="mb-2">
        <span class="display-1">@Model.MedianSalary:n0</span>
        <span class="ms-2">тенге</span>
    </div>
    <div class="mb-3 fst-italic text-muted">
        Рассчитано на основе @Model.CountOfSalaries анкет(ы).
    </div>
    <div class="mt-3 mb-3 fs-3 fw-light">
        Подробнее на сайте <a href="@Model.FrontendUrlToRedirect">techinterview.space/salaries</a>
    </div>
</div>

<!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>

</body>
</html>