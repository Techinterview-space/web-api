@model Web.Api.Features.Emails.ViewModels.PasswordResetViewModel
@{
    Layout = "/Views/Shared/_EmailLayout.cshtml";
    ViewData["EmailTitle"] = "Reset your password";
    ViewData["PreHeader"] = "Password reset request";

    ViewData["CallToActionTitle"] = "Reset Password";
    ViewData["CallToActionLink"] = Model.ResetUrl;
}

<p>
    Hello @Model.FirstName,
</p>

<p>
    We received a request to reset your password for your TechInterview.space account.
</p>

<p>
    Click the button below to reset your password. If you did not request a password reset, you can safely ignore this email.
</p>

<p>
    This link will expire in 1 hour.
</p>
